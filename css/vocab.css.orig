body {

 color: #E6E6E6;  /* colors from Azure documentation */
 background-color: #171717;
}

section {

  border-bottom: 1px solid #4f4f4f;
  font-family: 'Lato Medium', Arial, sans-serif;
  display: grid; 
  width: 70%;
  margin: auto auto;
  grid-template-columns: 1fr 1fr; 
  column-gap: 10px;

  padding: 10px; 
}

section.definitions {

}

section.samples {
}

section p { 
  padding-top: 3px;
  padding-bottom: 3px;
  padding-right: 6px;
  line-height: 1.6em; 
  margin: 3px 0;     
}

.pos {
  font-weight: bold;
  color: #ffd700;
}

dl.hwd > dt > ul {

list-style-type: none;
margin-left: 0;
padding-left: 0;
}

dl.hwd > dt > ul > li {

  margin-bottom: 1em;
}


/* End prospective new code */

/*
 Use this `:not()` selector to select dd's that do not have a class set to 'expessions':
*/
dl.hwd > dd:not(.expressions) {
  display: list-item;
}

dl.hwd >  dd {
 color:#75b6e7; /* #268bd2 */
 margin-left: 20px;
 margin-top: .75em;
 margin-bottom: .75em;
}

dd.expressions dl {
  color: #E6E6E6; 
}

/* NOTE:  From https://www.the-art-of-web.com/css/format-dl/  example #5 using Flexbox. */
dd.expressions > dl {
    display: flex;
    flex-flow: row wrap;
    color: #e6e6e6;
    margin-left: 20px;
}

dd.expressions > dl >  dt {
    flex-basis: 45%;
    padding: 2px 4px;
}

dd.expression > dl > dd {
    flex-basis: 45%;
    flex-grow: 1;
    margin: 0;
    padding: 2px 4px;

  list-style-type: none;
}

h1, h2, h3, h4, h5 {

  font-family: 'Karla Semibold', 'Open Sans', Arial, sans-serif;
}

table {
 /* 
  font-family: Arial, Helvetica, sans-serif;
  */
  border-collapse: collapse;
  width: 100%;
}

table td, table th {
  border: 1px solid #ddd;
  padding: 8px;
}

table tr:nth-child(even){background-color: #f2f2f2;}

table tr:hover {background-color: #ddd;}

table th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
